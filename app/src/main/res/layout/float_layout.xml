<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recordCtl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginRight="5dp"
    android:gravity="right"
    android:orientation="horizontal"
    android:visibility="gone"
>
    <ImageButton
        android:id="@+id/rotateBtn"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:background="@android:color/transparent"
        android:src="@drawable/rotate" />

    <ImageButton
        android:id="@+id/topViewBtn"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:background="@android:color/transparent"
        android:src="@drawable/top_gray" />


    <ImageButton
        android:id="@+id/bottomViewBtn"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:background="@android:color/transparent"
        android:src="@drawable/bottom_gray" />


    <ImageButton
        android:id="@+id/leftViewBtn"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:background="@android:color/transparent"
        android:src="@drawable/left_gray" />


    <ImageButton
        android:id="@+id/rightViewBtn"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:background="@android:color/transparent"
        android:src="@drawable/right_gray" />


    <ImageButton
        android:id="@+id/narrowViewBtn"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:background="@android:color/transparent"
        android:src="@drawable/lr_gray" />


    <ImageButton
        android:id="@+id/settingBtn"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:background="@android:color/transparent"
        android:src="@drawable/setting" />
</LinearLayout>